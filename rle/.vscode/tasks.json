{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile qmk_rle",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${workspaceRoot}/qmk_rle.c",
                "-o",
                "${workspaceRoot}/qmk_rle"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}