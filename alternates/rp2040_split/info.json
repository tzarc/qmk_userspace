{
    "manufacturer": "Tzarc",
    "maintainer": "tzarc",
    "keyboard_name": "RP2040 Split",
    "usb": {
        "vid": "0xFEDC",
        "pid": "0xCAFE",
        "device_version": "0.0.1"
    },
    "processor": "RP2040",
    "bootloader": "rp2040",
    "bootloader_instructions": "Hold the boot switch and tap the reset switch, or hold the top-left key when plugging in the board.",
    "features": {
        "bootmagic": true,
        "console": true,
        "encoder": true,
        "extrakey": true,
        "mousekey": true,
        "os_detection": true,
        "rgblight": true
    },
    "build": {
        // "lto": true
    },
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "rows": ["GP0"],
        "cols": ["GP1"]
    },
    "encoder": {
        "rotary": [{ "pin_a": "GP2", "pin_b": "GP3", "resolution": 2 }]
    },
    "split": {
        "enabled": true,
        "soft_serial_pin": "GP4",
        "encoder": {
            "right": {
                "rotary": [{ "pin_a": "GP2", "pin_b": "GP3", "resolution": 2 }]
            }
        },
        "transport": {
            "sync": {
                "activity": true,
                "detected_os": true,
                "indicators": true,
                "layer_state": true,
                "matrix_state": true,
                "modifiers": true,
                "wpm": true
            }
        }
    },
    "ws2812": {
        "pin": "GP5",
        "driver": "vendor"
    },
    "rgblight": {
        "led_count": 144,
        "split": true,
        "sleep": true,
        "split_count": [72, 72],
        "animations": {
            "alternating": true,
            "breathing": true,
            "christmas": true,
            "knight": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "rgb_test": false,
            "snake": true,
            "static_gradient": true,
            "twinkle": true
        },
        "hue_steps": 8,
        "saturation_steps": 8,
        "brightness_steps": 8,
        "max_brightness": 255
    },
    "layouts": {
        "LAYOUT_ortho_2x1": {
            "layout": [
                { "matrix": [0, 0], "x": 0, "y": 0 },
                { "matrix": [1, 0], "x": 1, "y": 0 }
            ]
        }
    }
}
