#!/bin/bash

if [[ ! -z $SIZE_REGRESSION_EXECUTING ]] ; then
    exit 0
fi

if [ "$1" != "$2" ]; then
    [ -e lib/ugfx ] && rm -rf lib/ugfx
    [ -e lib/chibios-contrib/ext/mcux-sdk ] && rm -rf lib/chibios-contrib/ext/mcux-sdk
    make git-submodule
    ../bin/qmk --update
    make git-submodule
fi
